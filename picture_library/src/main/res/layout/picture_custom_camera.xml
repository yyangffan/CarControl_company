<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <com.luck.picture.lib.camera.CustomCameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#99000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_cus_takpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_solder_red"
            android:padding="10dp"
            android:src="@drawable/cus_camera" />
        <TextView
            android:id="@+id/tv"
            android:text="选择拍照类型"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pic_cus_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="#ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/picture_color_grey_3e"
            android:lines="2"
            android:padding="2dp"
            android:text="0103车辆识别代码哈哈哈哈咯嗡嗡你我哥呢哦不哦i十大歌手"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pic_cus_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <TextView
        android:id="@+id/pic_cus_watermarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:padding="8dp"
        android:textColor="@color/picture_color_white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1数量的感觉我呢" />

    <TextView
        android:id="@+id/pic_cus_watermarkershow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:padding="8dp"
        android:textColor="@color/picture_color_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1数量的感觉我呢" />

    <TextView
        android:id="@+id/pic_cus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp"
        android:layout_marginRight="120dp"
        android:padding="8dp"
        android:text="拍照名称"
        android:textColor="@color/car_red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/pic_cus_confir"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/picture_color_white"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="14dp"
        android:paddingRight="30dp"
        android:paddingBottom="14dp"
        android:visibility="gone"
       >

        <ImageView
            android:id="@+id/pic_cus_success"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pic_confirm" />

        <ImageView
            android:id="@+id/pic_cus_restore"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:background="@drawable/bg_solder_red"
            android:src="@drawable/pic_cus_reset" />

    </RelativeLayout>
</FrameLayout>