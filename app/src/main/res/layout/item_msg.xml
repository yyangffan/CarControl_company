<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_6">

    <TextView
        android:id="@+id/item_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dp_8"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我是标题" />

    <TextView
        android:id="@+id/item_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_8"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_msg_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2022-02-06" />

    <TextView
        android:id="@+id/item_msg_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:lineSpacingExtra="@dimen/dp_3"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_msg_title"
        tools:text="消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，
        消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体，消息体" />

</androidx.constraintlayout.widget.ConstraintLayout>