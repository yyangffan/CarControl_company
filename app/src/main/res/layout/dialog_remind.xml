<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner_white"
    android:layout_margin="@dimen/dp_40"
    >

    <TextView
        android:id="@+id/remind_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:padding="5dp"
        android:text="提示"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/remind_dialog_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remind_dialog_title"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/remind_dialog_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/remind_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remind_dialog_imgv"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:text="检测到您没有打开通知权限"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remind_dialog_rl"
        android:background="#c7c7c7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remind_dialog_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/remind_dialog_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="0.5dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </LinearLayout>


</RelativeLayout>